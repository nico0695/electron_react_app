{
  "name": "wizard_electron",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/main.js",
  "productName": "Wizard Pos",
  "homepage": "./",
  "scripts": {
    "dev:react": "craco start",
    "build:react": "craco build && cp -r build dist/renderer",
    "dev:electron": "NODE_ENV=development webpack --config webpack.electron.config.js --mode development && electron .",
    "build:electron": "NODE_ENV=production webpack --config webpack.electron.config.js --mode production",
    "dev": "concurrently -k \"cross-env BROWSER=none npm run dev:react\"  \"npm run dev:electron\"",
    "build": "npm run build:electron && npm run build:react",
    "pack:electron": "npx electron-builder -w -c.extraMetadata.main=./dist/main.js",
    "prod": "npm run build && npm run pack:electron"
  },
  "build": {
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "productName": "Wizar Pos",
    "appId": "com.wizardpos.wizardpos",
    "directories": {
      "output": "dist"
    },
    "extraFiles": [
      "credentials"
    ],
    "publish": null
  },
  "dependencies": {
    "@babel/core": "^7.20.7",
    "@babel/plugin-proposal-decorators": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.9",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "babel-loader": "^9.1.0",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "sqlite3": "^5.1.4",
    "ts-loader": "^9.4.2",
    "typeorm": "^0.3.11",
    "typescript": "^4.9.4",
    "web-vitals": "^2.1.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-node-externals": "^3.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "ts-node": "^10.9.1",
    "wait-on": "^6.0.1"
  }
}
